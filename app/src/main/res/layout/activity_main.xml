<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_orange">

    <TextView
        android:id="@+id/display"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@color/light_blue"
        android:padding="10dp"
        android:text="@string/_calc"
        android:textColor="@color/white"
        android:textSize="45sp"
        android:gravity="bottom|right"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnOne"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:background="@color/purple_900"
            android:text="@string/_1"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:layout_margin="2dp"/>

        <Button
            android:id="@+id/btnTwo"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:background="@color/purple_900"
            android:text="@string/_2"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:layout_margin="2dp"/>

        <Button
            android:id="@+id/btnThree"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:background="@color/purple_900"
            android:text="@string/_3"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:layout_margin="2dp"/>

        <Button
            android:id="@+id/btnDivide"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:background="@color/purple_900"
            android:text="@string/_divide"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:layout_margin="2dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnFour"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:background="@color/purple_700"
            android:text="@string/_4"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:layout_margin="2dp"/>

        <Button
            android:id="@+id/btnFive"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:background="@color/purple_700"
            android:text="@string/_5"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:layout_margin="2dp"/>

        <Button
            android:id="@+id/btnSix"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:background="@color/purple_700"
            android:text="@string/_6"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:layout_margin="2dp"/>

        <Button
            android:id="@+id/btnPlus"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:background="@color/purple_700"
            android:text="@string/_plus"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:layout_margin="2dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnSeven"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:background="@color/purple_500"
            android:text="@string/_7"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:layout_margin="2dp"/>

        <Button
            android:id="@+id/btnEight"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:background="@color/purple_500"
            android:text="@string/_8"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:layout_margin="2dp"/>

        <Button
            android:id="@+id/btnNine"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:background="@color/purple_500"
            android:text="@string/_9"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:layout_margin="2dp"/>

        <Button
            android:id="@+id/btnSubtract"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:background="@color/purple_500"
            android:text="@string/_subtract"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:layout_margin="2dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnClear"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:background="@color/purple_100"
            android:text="@string/_CLR"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:layout_margin="2dp"/>

        <Button
            android:id="@+id/btnZero"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:background="@color/purple_100"
            android:text="@string/_0"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:layout_margin="2dp"/>

        <Button
            android:id="@+id/btnDecimalDot"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:background="@color/purple_100"
            android:text="@string/_DecimalDot"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:layout_margin="2dp"/>

        <Button
            android:id="@+id/btnMultiple"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:background="@color/purple_100"
            android:text="@string/_multiple"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:layout_margin="2dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btnEquals"
            android:layout_width="0dp"
            android:layout_height="160dp"
            android:layout_weight="1"
            android:background="@color/purple_200"
            android:text="@string/_Equals"
            android:textColor="@color/white"
            android:textSize="40sp"
            android:layout_margin="2dp"/>
    </LinearLayout>




</LinearLayout>














